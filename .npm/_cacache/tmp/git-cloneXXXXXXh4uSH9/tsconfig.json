{
   "compilerOptions": {
       "declaration": true,
       "sourceMap": true,
       "target": "es2021",
       "module": "CommonJS",
       "moduleResolution": "Node",
       "esModuleInterop": true,
       "allowSyntheticDefaultImports": true,
       "experimentalDecorators": true,
       "skipLibCheck": true,
       "skipDefaultLibCheck": true,
       "pretty": true,
       "rootDir": "src",
       "outDir": "lib"
   },
   "include":[ 
      "src/**/*"
   ],
   "exclude": [
      "node_modules"
   ],
   "compileOnSave":false
}